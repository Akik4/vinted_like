{% extends 'base.html.twig' %}
{% block profileUser %}
	{% if id == null %}
		<li class="nav-item">
			<a class="nav-link" href="/login">Log In</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="/register">Sign In</a>
		</li>
	{% endif %}
	{% if id != null %}
		<li class="nav-item">
			<div class="dropdown px-4">
				<button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					Profile
				</button>
				<ul class="dropdown-menu">
					<li>
						<a class="dropdown-item" href="{{path('app_account')}}">Profile</a>

					</li>
					<li>
						{% if app.user %}
							<div
								class="bg-danger">
								{# You are logged in as
																																																																																																																																																								{{ app.user.userIdentifier }}, #}
								<a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>

							</div>
						{% endif %}
					</li>
				</ul>
			</div>

		</li>
	{% endif %}


{% endblock %}

{% block body %}
	<section class="edit-article d-flex justify-content-center align-items-center" style="height:85vh">
		<div class="form-edit-article w-25">
			{{ form(form) }}

			</div>
		</section>
	{% endblock %}
