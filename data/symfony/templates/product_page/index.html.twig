{% extends 'base.html.twig' %}

{% block body %}
<div style="display: flex; align-items: flex-start; max-width: 800px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px;">
    
    <!-- Image Section on the left -->
    <div style="flex-shrink: 0; margin-right: 20px;">
        <img src="{{ article.imgUrl }}" alt="Product Image" style="width: 200px; height: auto; border-radius: 10px;">
    </div>

    <!-- Product Information Section on the right -->
    <div style="flex-grow: 1;">
        <!-- Product Title -->
        <h2 style="font-size: 22px; margin-bottom: 10px;">{{ article.name }}</h2>

        <!-- Price -->
        <p style="font-size: 18px; color: #333; margin-bottom: 10px;">
            <strong>{{ article.price }}</strong> â‚¬
        </p>

        <!-- Description or Content -->
        <p style="font-size: 16px; color: #555; margin-bottom: 20px;">
            {{ article.content }}
        </p>

        <!-- Seller Information -->
        <div style="font-size: 14px; color: #888; margin-bottom: 20px;">
            Seller: <a href="mailto:{{ article.seller.email }}" style="color: #007bff;">{{ article.seller.email }}</a>
        </div>

        <!-- Call-to-Action Button -->
        <div>
            <a href="#" class="btn btn-primary" style="padding: 10px 20px; background-color: #007bff; color: white; border-radius: 5px; text-decoration: none;">Message Seller</a>
        </div>
    </div>
</div>
{% endblock %}
