{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center" style="height: 85vh">

		<form method="post" class="w-30">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-5 font-weight-normal">Sign in to VintedKids</h1>

			<label for="username">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control p-2" autocomplete="email" required autofocus>
			<label for="password">Password</label>
			<input type="password" name="_password" id="password" class="form-control pt-2 " autocomplete="current-password" required>


			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																																																																																	            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																	            See https://symfony.com/doc/current/security/remember_me.html
																																																																																	
																																																																																	            <div class="checkbox mb-3">
																																																																																	                <input type="checkbox" name="_remember_me" id="_remember_me">
																																																																																	                <label for="_remember_me">Remember me</label>
																																																																																	            </div>
																																																																																	        #}

			<div id="emailHelp" class="form-text mb-4 ">
				<a href="/reset-password
																																								" class="link-underline link-underline-opacity-0 link-opacity-50">Forgot Password</a>


			</div>


			<button class="btn btn-lg btn-primary w-100" type="submit">
				Sign in
			</button>
			<p class="text-center">OR</p>
			<button class="btn btn-lg w-100 bg-secondary" type="submit">

				<a href="/register" class="link-light link-underline link-underline-opacity-0 link-opacity-100">


					Register
				</a>
			</button>

		</form>
	</div>
{% endblock %}
