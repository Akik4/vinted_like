{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<section class="section-reset-password d-flex justify-content-center align-items-center" style="height: 85vh">

		<div class="container-reset-password ">
			<h3>Reset your password</h3>

			{{ form_start(resetForm) }}
			{{ form_row(resetForm.plainPassword) }}
			<button class="btn btn-primary w-100 py-2 my-3">Reset password</button>
			{{ form_end(resetForm) }}

		</div>
	</section>
{% endblock %}
