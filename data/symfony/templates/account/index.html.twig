{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
 <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            padding-top: 50px;
        }

        .profile-container {
            display: flex;
            align-items: center;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 800px;
        }

        .profile-image {
            flex-shrink: 0;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            margin-right: 20px;
        }

        .profile-info {
            flex-grow: 1;
        }

        .profile-info h2 {
            margin: 0;
            font-size: 1.5em;
        }

        .profile-info p {
            margin: 5px 0;
            color: #666;
        }

        .profile-info .details {
            display: flex;
            gap: 20px;
            font-size: 0.9em;
            color: #333;
        }

        .profile-info .details div {
            display: flex;
            align-items: center;
        }

        .profile-info .details div span {
            margin-left: 5px;
        }

        .profile-info a {
            color: #007bff;
            text-decoration: none;
            font-size: 0.9em;
        }

        .profile-info a:hover {
            text-decoration: underline;
        }
    </style>


