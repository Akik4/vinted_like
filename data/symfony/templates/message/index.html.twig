{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!
{% endblock %}

{% block body %}
	<style>
		.container-messages {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			height: 85vh;
			font: 18px / 1.5 sans-serif;
		}
		.container-messages code {

			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<section class="container-messages w-100">
		<div class="container-fluid w-100 container-messages bg-light d-flex flex-column justify-content-between">

			<div style="overflow-y: scroll; padding-bottom:20px">

				{% for message in messages %}
					<div class="d-flex">
						<p>{{ message.userId.email }}</p>
						<p>: :
							{{ message.datetime |date('H:i') }}</p>

					</div>


					<div class="bg-info border rounded px-2 pt-3" style="width:max-content; max-width:100%; ">
						<p class="text-light" style="
																													  overflow-wrap: break-word;">{{ message.content }}</p>

					</div>
				{% endfor %}
			</div>

			<div class="btn-form w-100">
				{{ form(form) }}
				</div>
			</div>
		</section>
	{% endblock %}
